---
import Base from "../layouts/BaseLayout.astro";
import StandingsTable from "../components/StandingsTable";
import InteractiveRankChart from "../components/InteractiveRankChart";
---
<Base title="Wurstliga â€“ Tabelle">
  <section class="space-y-8">
    <div class="space-y-4">
      <h2 class="text-2xl font-semibold">Gesamtwertung</h2>
      <StandingsTable client:load />
    </div>
    
    <div class="space-y-4">
      <h2 class="text-2xl font-semibold">Spieltage</h2>
      <div class="grid grid-cols-2 sm:grid-cols-4 md:grid-cols-6 lg:grid-cols-8 xl:grid-cols-10 gap-2">
        {Array.from({length: 34}, (_, i) => (
          <a 
            href={`/spieltag/${i + 1}`}
            class="bg-zinc-800 hover:bg-zinc-700 border border-zinc-700 rounded-lg p-3 text-center transition-colors"
          >
            <div class="text-sm text-zinc-400">Spieltag</div>
            <div class="text-lg font-semibold">{i + 1}</div>
          </a>
        ))}
      </div>
    </div>
    
    <div>
      <h2 class="text-2xl font-semibold">Rangentwicklung</h2>
      <div class="mt-4">
        <InteractiveRankChart client:load />
      </div>
    </div>
  </section>

</Base>